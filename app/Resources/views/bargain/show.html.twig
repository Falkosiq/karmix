{% extends 'admin/base.html.twig' %}

{% block body %}
    <h1>Promocja</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ bargain.name }}</td>
            </tr>
            <tr>
                <th>Tekst</th>
                <td>{{ bargain.text }}</td>
            </tr>
            <tr>
                <th>Obraz</th>
                <td>{{ bargain.photo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_bargain_index') }}">Powrót do listy promocji</a>
        </li>
        <li>
            <a href="{{ path('admin_bargain_edit', { 'id': bargain.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
