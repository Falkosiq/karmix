{% extends 'admin/base.html.twig' %}

{% block body %}
    <h1>Lista promocji</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for bargain in bargains %}
            <tr>
                <td>{{ bargain.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_bargain_show', { 'id': bargain.id }) }}">Pokaż</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_bargain_edit', { 'id': bargain.id }) }}">Edytuj</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_bargain_new') }}">Stwórz nową promocję</a>
        </li>
        <li>
             <a href="{{ path('admin') }}">Powrót do panelu</a>
        </li>
    </ul>
{% endblock %}
