{% extends 'admin/base.html.twig' %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Kategoria</th>
                <td>{{ tag.category }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_tag_index') }}">Powrót do listy tagów</a>
        </li>
        <li>
            <a href="{{ path('admin_tag_edit', { 'id': tag.id }) }}">Edycja</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
