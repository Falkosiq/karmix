{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% endblock %}

{% block body %}
    {{ parent() }}
    <div class="header-line">
            <div class="row header-part row-eq-height">
                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 blank">
                    
                </div>
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                    <div class="tag-bar row">
                        <div class="col-md-9 col-sm-9 col-xs-9 tags"></div>
                        <a href="{{ app.request.headers.get('referer') }}"><div class="col-md-3 col-sm-3 col-xs-3 back">Powrót</div></a>
                    </div>
    
            <div class="offer">
                <div class="row">
                    <div class="col-md-4">
                        <div class="flexslider" style="width: 100%; height:100%">
                            <ul class="slides" style="width: 100%; height:100%">
                            {% if offer.photo1 %}
                                <li><img class="img-responsive offer-photo" src="{{ asset('images/' ~ offer.photo1) }}"></li>
                                {% if offer.photo2 %}
                                    <li><img class="img-responsive offer-photo" src="{{ asset('images/' ~ offer.photo2) }}"></li>
                                {% endif %}
                                {% if offer.photo3 %}
                                    <li><img class="img-responsive offer-photo" src="{{ asset('images/' ~ offer.photo3) }}"></li>
                                {% endif %}
                            {% else %}
                                <li><img class="img-responsive offer-photo" src="{{ asset('images/blank.jpg') }}"></li>
                            {% endif %}
                            
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8 offer-info">
                            <h1><b>{{ offer.name }}</b></h1><br>
                            <div><p><b>Zastosowanie:</b> <br>{{ offer.application }} <br>
                                    <b>Stan na magazynie:</b><br> {{ offer.state }} <br></p>
                                <b>Cena:</b><br> {{ offer.price }} zł / {{ offer.per }}
                    </div>  
                </div>
                    <div class="col-md-12 desc"><br><b>Opis:</b>
                            {{ offer.description }}
                         </div>
            </div>
                </div>
            </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-1.8.3.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery.flexslider-min.js') }}"></script>
            <script type="text/javascript">
                $(window).load(function() {
                    $('.flexslider').flexslider({
                      animation: "slide",
                      slideshowSpeed: 3000
                    });
                  });
            </script>
{% endblock %}
