{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% endblock %}

{% block body %}
    {{ parent() }}
    <div class="header-line">
            <div class="row header-part row-eq-height">
                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 blank">
                    
                </div>
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">

    
        {% for offer in offers %}
            <div class="offer row">
                <div class="col-md-2 col-sm-2 list-photo">
                    {% if offer.photo1 %}
                                <img class="img-responsive offer-thumb" src="{{ asset('images/' ~ offer.photo1) }}">
                            {% else %}
                                <img class="img-responsive offer-thumb" src="{{ asset('images/blank.jpg') }}">
                            {% endif %}
                </div>
                <div class="col-md-10 col-sm-10 list-text">
                <b><a class="show-offer" href="{{ path('offer_display',{'id' : offer.id}) }}">{{ offer.name }}</a></b>
                <div class="full-list">Zastosowanie: {{ offer.application }} <br>
                    Stan na magazynie: {{ offer.state }}</div>
                Cena: {{ offer.price }} z≈Ç / {{ offer.per }}
                </div>
            </div>
        {% endfor %}
                </div>
            </div>
    </div>
    
{% endblock %}
